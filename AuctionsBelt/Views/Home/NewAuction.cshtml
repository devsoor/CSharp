<!DOCTYPE html>
<body lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <title>Auction</title>

</head>
@model Auction
<body>

    <div class="container-fluid">
        <div class="row justify-content-end">
            <div class="col-sm-8">
                <a href="/Dashboard">Home</a> 
            </div>
            <div class="col-sm-4">
              <a href="/logout">Logout</a>
            </div>
        </div> 
        <div class="row justify-content-center">
                <div class="card card-cascade wider mb-4 wow fadeIn">
                    <div class="card-body card-body-cascade text-left">
                        <form class="text-center p-4" asp-action="CreateAuction" asp-controller="Home" method="post">
                            <div class="form-group row">
                                <label asp-for="ProductName" class="col-sm-5 col-form-label">Product Name</label>
                                <div class="col-sm-7">
                                    <input asp-for="ProductName" class="form-control" placeholder="Name">
                                    <span class="bg-danger text-white" asp-validation-for="ProductName"></span>
                                </div>
                            </div>   
                            <div class="form-group row">
                                <label asp-for="StartingBid" class="col-sm-5 col-form-label">Starting Bid</label>
                                <div class="col-sm-7">
                                    <input type="number" step=0.01 min=0 asp-for="StartingBid" class="form-control" placeholder="$$$">
                                    <span class="bg-danger text-white" asp-validation-for="StartingBid"></span>
                                </div>
                            </div>   
                            <div class="form-group row">
                                <label asp-for="EndDate" class="col-sm-5 col-form-label">End Date</label>
                                <div class="col-sm-7">
                                    <input type="date" asp-for="EndDate" class="form-control">
                                    <span class="bg-danger text-white" asp-validation-for="EndDate"></span>
                                </div>
                            </div>   
                            <div class="form-group row">
                                <label asp-for="Description" class="col-sm-5 col-form-label">Description</label>
                                <div class="col-sm-7">
                                    <textarea class="form-control rounded-0" asp-for="Description" cols="70" rows="5"></textarea>
                                    <span class="bg-danger text-white" asp-validation-for="Description"></span>
                                </div>
                            </div> 
                            <div class="row justify-content-end p-4">
                                <button class="btn btn-primary" type="submit">Create Auction</button>
                            </div>
                        </form>
                    </div>
                </div>
        </div>
    </div>
</body>
</body>