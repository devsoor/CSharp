<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <title>The Wall</title>

</head>
@model IndexViewModel
<body>

    <div class="container-fluid p-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-cascade wider mb-4 wow fadeIn">
                    <div class="card-body card-body-cascade text-left">
                        <form class="text-center p-2" asp-action="register" asp-controller="Home" method="post">
                            <p class="h4 mb-4">Register</p>

                            <div class="form-group row">
                                <label asp-for="NewRegUser.FirstName" class="col-sm-4 col-form-label">First Name</label>
                                <div class="col-sm-8">
                                    <input asp-for="NewRegUser.FirstName" class="form-control" placeholder="First name">
                                    <span class="bg-danger text-white" asp-validation-for="NewRegUser.FirstName"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="NewRegUser.LastName" class="col-sm-4 col-form-label">Last Name</label>
                                <div class="col-sm-8">
                                    <input asp-for="NewRegUser.LastName" class="form-control" placeholder="Last name">
                                    <span class="bg-danger text-white" asp-validation-for="NewRegUser.LastName"></span>
                                </div>
                            </div>
                
                            <div class="form-group row">
                                <label asp-for="NewRegUser.Email" class="col-sm-4 col-form-label">Email</label>
                                <div class="col-md-8">
                                    <input asp-for="NewRegUser.Email" class="form-control" placeholder="Email">
                                    <span class="bg-danger text-white" asp-validation-for="NewRegUser.Email"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="NewRegUser.Password" class="col-sm-4 col-form-label">Password</label>
                                <div class="col-md-8">
                                    <input asp-for="NewRegUser.Password" class="form-control" placeholder="Password">
                                    <span class="bg-danger text-white" asp-validation-for="NewRegUser.Password"></span>
                                </div>
                            </div>

                            <div class="form-row mb-4">
                                <label asp-for="NewRegUser.Confirm" class="col-sm-4 col-form-label">Confirm Password</label>
                                <div class="col-md-8">
                                    <input asp-for="NewRegUser.Confirm" class="form-control" placeholder="Confirm Password">
                                    <span class="bg-danger text-white"  asp-validation-for="NewRegUser.Confirm"></span>
                                </div>
                            </div>

                            <div class="row justify-content-end">
                                <button class="btn btn-primary" type="submit">Sign Up</button>
                            </div>
                            <p>Already have an account? <a href="login">Login</a></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card card-cascade wider mb-4 wow fadeIn">
                    <div class="card-body card-body-cascade text-left">
                        <form class="text-center p-2" asp-action="login" asp-controller="Home" method="post">
                            <div class="form-row mb-4">
                                <label asp-for="NewLogUser.Email" class="col-sm-4 col-form-label">Email</label>
                                <div class="col-md-8">
                                    <input asp-for="NewLogUser.Email" class="form-control" placeholder="Email">
                                    <span class="bg-danger text-white" asp-validation-for="NewLogUser.Email"></span>
                                </div>
                            </div>

                            <div class="form-row mb-4">
                                <label asp-for="NewLogUser.Password" class="col-sm-4 col-form-label">Password</label>
                                <div class="col-md-8">
                                    <input asp-for="NewLogUser.Password" class="form-control" placeholder="Password">
                                    <span class="bg-danger text-white" asp-validation-for="NewLogUser.Password"></span>
                                </div>
                            </div>

                            <div class="row justify-content-end">
                                <button class="btn btn-primary" type="submit">Login</button>
                            </div>
                            <p>Don't have an account?
                                <a href="register">Register</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>