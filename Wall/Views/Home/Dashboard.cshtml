@model Message
<body>

    <div class="container-fluid p-4">
        <div class="row">
            <div class="col-sm-6">
                <h3>CodingDojo Wall</h3>
            </div>
            <div class="col-sm-4 text-right">
                <p>Welcome @ViewBag.CurrentUser.FirstName</a></p>
            </div>
            <div class="col-sm-2">
                <a href="/logout">Logout</a>
            </div>
            
        </div> 
        <div class="row justify-content-center">
            <div class="col">
                <form class="text-center p-4" asp-action="PostMessage" asp-controller="Home" method="post">
                    <div class="form-group row">
                        <label asp-for="TheMessage">Post a message</label>
                        <textarea asp-for="TheMessage" class="form-control" cols="30" rows="5"></textarea>
                    </div>
                    <div class="row justify-content-end">
                        <button type="submit" class="btn btn-primary shadow rounded">Post message</button>
                    </div>
                </form>
            </div>        
        </div>

        @foreach (var msg in ViewBag.AllMessages)
        {
        <hr>
            <div class="row">
                <div class="col">
                    <div class="row ">
                        @* <div class="col-md-7"> *@
