                        @* </div> *@
                        @* <div class="col-md-5"> *@
                            <form class="text-center p-4" asp-action="DeleteMessage" asp-controller="Home" method="post">
                                <button type='submit' value="@msg.MessageId" class="btn btn-danger shadow rounded">Delete Message</button>
                            </form>                       
                        @* </div> *@
                    </div>
                    <p>@msg.TheMessage</p>
