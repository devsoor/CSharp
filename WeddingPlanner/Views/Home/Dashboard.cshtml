<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <title>Wedding Planner</title>

</head>
@model List<Wedding>
<body>

    <div class="container-fluid">
        <h3>Welcome to the Wedding Planner, @ViewBag.CurrentUser.FirstName</h3>
        <div class="row justify-content-end">
            <a href="/logout">Logout</a>
        </div> 
        <div class="row justify-content-center">
            @* <div class="col-md-6"> *@
                <div class="card card-cascade wider mb-4 wow fadeIn">
                    <div class="card-body card-body-cascade text-left">
                        <table class="table table-striped table-bordered ">
                            <thead class="black white-text">
                                <tr>
                                    <th scope="col">Wedding</th>
                                    <th scope="col">Date</th>
                                    <th scope="col"># of Guests</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var wedding in Model)
                                {
                                    <tr>
                                        <td><a href="/ShowWedding/@wedding.WeddingId">@wedding.Name</a></td>
                                        <td>@wedding.DateToDisplay</td>
                                        <td>@wedding.AttendedUsers.Count</td>
                        
                                        <td><a href="/RSVPWedding/@wedding.Action/@wedding.WeddingId">@wedding.Action</a></td>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            @* </div> *@
        </div>
        <div class="row justify-content-end">
            <a class="btn btn-primary" href="/NewWedding">New Wedding</a>
        </div>
    </div>
</body>
</html>