<!DOCTYPE html>
<body lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <title>Wedding Planner</title>

</head>
@model Wedding
<body>

    <div class="container-fluid">
        <div class="row justify-content-end">
            <a href="/Dashboard">Dashboard   </a>   <a href="/logout">    Logout</a>
        </div> 
        <div class="row justify-content-center">
                <div class="card card-cascade wider mb-4 wow fadeIn">
                    <div class="card-body card-body-cascade text-left">
                        <form class="text-center p-4" asp-action="CreateWedding" asp-controller="Home" method="post">
                            <div class="form-group row">
                                <label asp-for="WedderOne" class="col-sm-5 col-form-label">Wedder One</label>
                                <div class="col-sm-7">
                                    <input asp-for="WedderOne" class="form-control" placeholder="Name">
                                    <span class="bg-danger text-white" asp-validation-for="WedderOne"></span>
                                </div>
                            </div>   
                            <div class="form-group row">
                                <label asp-for="WedderTwo" class="col-sm-5 col-form-label">Wedder Two</label>
                                <div class="col-sm-7">
                                    <input asp-for="WedderTwo" class="form-control" placeholder="Name">
                                    <span class="bg-danger text-white" asp-validation-for="WedderTwo"></span>
                                </div>
                            </div>   
                            <div class="form-group row">
                                <label asp-for="Date" class="col-sm-5 col-form-label">Date</label>
                                <div class="col-sm-7">
                                    <input type="date" step=0.01 asp-for="Date" class="form-control">
                                    <span class="bg-danger text-white" asp-validation-for="Date"></span>
                                </div>
                            </div> 
                            <div class="form-group row">
                                <label asp-for="Address" class="col-sm-5 col-form-label">Address</label>
                                <div class="col-sm-7">
                                    <input asp-for="Address" class="form-control" placeholder="Address">
                                    <span class="bg-danger text-white" asp-validation-for="Address"></span>
                                </div>
                            </div>   
                            <div class="row justify-content-end p-4">
                                <button class="btn btn-primary" type="submit">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
        </div>
    </div>
</body>
</body>