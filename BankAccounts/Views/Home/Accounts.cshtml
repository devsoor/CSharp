<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <title>LoginRegister</title>

</head>
@model Transaction
<body>

    <div class="container-fluid">
        <div class="row justify-content-end">
            <a href="/logout">Logout</a>
        </div> 
        <div class="row justify-content-center">
            <div class="col">
                <div class="card card-cascade wider mb-4 wow fadeIn">
                    <div class="card-body card-body-cascade text-left">
                        <div class="row justify-content-center">
                            <div class="col-sm-8 text-center">
                                    <h3>Welcome @ViewBag.FirstName</h3>
                            </div>
                            <div class="col-sm-4">
                                <div class="row">
                                    <a href="/dishes/new">Current Balance: @ViewBag.Balance</a>
                                </div>
                                <div class="row">
                                    <span class="bg-danger text-white">@ViewBag.BalanceError</span>
                                </div>
                            </div>
                        </div>        
                        <form class="text-center p-2" asp-action="AccountSubmit" asp-controller="Home" method="post">
                            <div class="form-group row">
                                <label asp-for="Amount" class="col-sm-4 col-form-label">Deposit/Withdraw</label>
                                <div class="col-sm-4">
                                    <input type="number" step=0.01 asp-for="Amount" class="form-control">
                                </div>
                                <div class="col-sm-4">
                                    <button class="btn btn-primary" type="submit">Submit</button>
                                </div>
                            </div>                            
                        </form>
      
                        <table class="table table-striped table-bordered ">
                            <thead class="black white-text">
                                <tr>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in ViewBag.TransactionList)
                                {
                                    <tr>
                                        <td>@transaction.Amount</td>
                                        <td>@transaction.CreatedAt</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>