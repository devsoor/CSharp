<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <title>PortfolioII</title>
</head>
@model Survey
<body>
    <div class="container p-4">
        <div class="row justify-content-center">
            <div class="col">

                <form action="Update" method="post">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-3 col-form-label">Your Name</label>
                                <div class="col-sm-8">
                                    <span asp-validation-for="Name"></span>
                                    <input class="form-control" asp-for="Name" placeholder="Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Location" class="col-sm-3 col-form-label">Dojo Location</label>
                                <div class="col-sm-8">
                                    <span asp-validation-for="Location"></span>
                                    <select class="form-control" asp-for="Location" placeholder="Location">
                                        <option selected>San Jose</option>
                                        <option>Seattle</option>
                                        <option>San Francisco</option>
                                        <option>Austin</option>
                                        <option>Boise</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Language" class="col-sm-3 col-form-label">Favorite Language</label>
                                <div class="col-sm-8">
                                    <span asp-validation-for="Language"></span>
                                    <select class="form-control" asp-for="Language" placeholder="Language">
                                        <option>Python</option>
                                        <option>JavaScript</option>
                                        <option>Java</option>
                                        <option selected>C#</option>
                                        <option>C++</option>
                                        <option>Ruby</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="desc">Comment (optional)</label>
                                <span asp-validation-for="Comment"></span>
                                <textarea asp-for="Comment" class="form-control" id="Comment" rows="5"></textarea>
                            </div>
                            <div class="row justify-content-end">
                                <button class="btn btn-info" type="submit">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>