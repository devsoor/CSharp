<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <title>Dishes</title>
</head>
@model User
<body>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-sm-8">
                <div class="row">
                    <h1>Add a Chef!</h1>
                </div>
                <div class="card card-cascade wider mb-4 wow fadeIn">
                    <div class="card-body card-body-cascade text-center p-4">
                        <div class="row">
                                <a href="/">Home</a>
                        </div>
                        <div class="row">
                            <form class="text-center p-4" asp-action="NewChefSubmit" asp-controller="Home" method="post">
                                <div class="form-group row">
                                    <label asp-for="FirstName" class="col-sm-5 col-form-label">First Name</label>
                                    <div class="col-sm-7">
                                        <input asp-for="FirstName" class="form-control" placeholder="Name">
                                        <span class="bg-danger text-white" asp-validation-for="FirstName"></span>
                                    </div>
                                </div>   
                                <div class="form-group row">
                                    <label asp-for="LastName" class="col-sm-5 col-form-label">Last Name</label>
                                    <div class="col-sm-7">
                                        <input asp-for="LastName" class="form-control" placeholder="Name">
                                        <span class="bg-danger text-white" asp-validation-for="LastName"></span>
                                    </div>
                                </div>   
                                <div class="form-group row">
                                    <label asp-for="DOB" class="col-sm-5 col-form-label">Date of Birth</label>
                                    <div class="col-sm-7">
                                        <input type="date" asp-for="DOB" class="form-control">
                                        <span class="bg-danger text-white" asp-validation-for="DOB"></span>
                                    </div>
                                </div>  
                                <div class="row justify-content-end">
                                    <button class="btn btn-primary" type="submit">Add Chef</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
